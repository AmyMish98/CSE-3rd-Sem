#include<stdio.h>
#include<conio.h>
int main()
{
    system("cls");
    int arr[100],loc,temp, size,ele, i=0, j;

    printf ("Enter the size of the array : ");
    scanf("%d", &size);

    printf ("\n Enter the elements of the array : \n");
    for (i=0;i<size;i++)
        scanf("%d", &arr[i]);

    if (size!=0)
    {
    printf ("\n Enter the Element to be deleted : \n");
        scanf("%d", &ele);


    for (i=0;i<size;i++)
    {
       if(arr[i]==ele)
       {
           for(j=i;j<size;j++)
           arr[j]=arr[j+1];
       }
    }

    size--;
    printf ("\n Elements of the array : \n");
    for (i=0;i<size;i++)
        printf("%d \n", arr[i]);
    }
    else
    printf ("Array Empty!");
    return 0;
}
