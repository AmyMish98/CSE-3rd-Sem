#include<stdio.h>
#include<conio.h>
int main()
{
    system("cls");
    int arr[100],loc, size,ele, i=0;

    printf ("Enter the size of the array : ");
    scanf("%d", &size);

    printf ("\n Enter the elements of the array : \n");
    for (i=0;i<size;i++)
        scanf("%d", &arr[i]);

    if (size!=100)
    {
    printf ("\n Enter the Element to be inserted : \n");
        scanf("%d", &ele);

    printf ("\n Enter the Location : \n");
        scanf("%d", &loc);

    for (i=size;i>=loc;i--)
        arr[i]= arr[i-1];

    arr[loc-1]=ele;
    size++;
    printf ("\n Elements of the array : \n");
    for (i=0;i<size;i++)
        printf("%d \n", arr[i]);
    }
    else
    printf ("Array is Full!!!");
    return 0;
}
