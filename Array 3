#include<stdio.h>
#include<conio.h>
int main()
{
    system("cls");
    int arr[100], size,count =0, i=0, large, large2;

    printf ("Enter the size of the array : ");
    scanf("%d", &size);

    printf ("\n Enter the elements of the array : \n");
    for (i=0;i<size;i++)
        scanf("%d", &arr[i]);
    large=arr[0];
    for (i=1;i<size;i++)
    {
        if (large<arr[i])
        {
            large = arr[i];
            count++;
        }
    }
    large2=arr[0];
    for (i=1;i<size;i++)
    {
        if ((large2<arr[i])&&(i!=count))
            large2 = arr[i];
    }
    printf("\n Largest Value : %d", large);
    printf("\n Second Largest Value : %d", large2);
    return 0;
}
