#include<stdio.h>
#include<conio.h>
int main()
{
    system("cls");
    int arr[100], size,i=0, sum =0;
    float avg = 0;
    printf ("Enter the size of the array : ");
    scanf("%d", &size);

    printf ("\n Enter the elements of the array : \n");
    for (i=0;i<size;i++)
    {
        scanf("%d", &arr[i]);
        sum += arr[i];
    }
    avg = sum/size;
    printf("\n Sum = %d", sum);
    printf("\n Average = %f", avg);
    return 0;
}
