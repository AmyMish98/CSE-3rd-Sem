#include<stdio.h>
#include<conio.h>
int main()
{
    system("cls");
    int arr[100],even[100],odd[100],size,e=0, i=0,j=0,k=0;

    printf ("Enter the size of the array : ");
    scanf("%d", &size);

    printf ("\n Enter the elements of the array : \n");
    for (i=0;i<size;i++)
        scanf("%d", &arr[i]);

    for (i=0;i<size;i++)
    {
        if (arr[i]%2==0)
        {
            even[j]=arr[i];
            j++;
            e++;
        }
        else
        {
            odd[k]=arr[i];
            k++;
        }
    }
    printf ("\n Even Numbers of the array : \n");
    for (j=0;j<e;j++)
        printf("%d \n", even[j]);
    printf ("\n Odd Numbers of the array : \n");
    for (k=0;k<(size-e);k++)
        printf("%d \n", odd[k]);
    return 0;
}
