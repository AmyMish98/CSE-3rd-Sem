#include<stdio.h>
#include<conio.h>
int main()
{
    system("cls");
    int arr[100],loc,temp, size,ele, i=0, j;

    printf ("Enter the size of the array : ");
    scanf("%d", &size);

    printf ("\n Enter the elements of the array : \n");
    for (i=0;i<size;i++)
        scanf("%d", &arr[i]);

    for (i=0;i<size;i++)
    {
      for(j=(i+1);j<size;j++)
      {
          if(arr[i]>arr[j])
          {
              temp=arr[i];
              arr[i]=arr[j];
              arr[j]=temp;
          }
      }
    }
    printf ("\n Array in Ascending Order : \n");
    for (i=0;i<size;i++)
        printf("%d \n", arr[i]);


    return 0;
}
